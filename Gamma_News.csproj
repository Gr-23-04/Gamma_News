    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>aspnet-Gamma_News-e6a0abc9-ad74-47b7-8f46-b35a4f833a76</UserSecretsId>
