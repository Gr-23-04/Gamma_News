@model List<Gamma_News.Models.ViewModels.Article>


@if (Model != null)
{
	@foreach (var article in Model)
	{
		<div class="relative max-w-2xl container space-x-5 space-y-5 my-20 sm:py-8 text-center mx-auto my-auto border-4 border-b-green-300 border-y-yellow-300 border-sky-600 shadow-2xl shadow-slate-900 border-opacity-15 rounded-3xl transition hover:scale-105 hover:backdrop-blur-md hover:border-y-[#EB6E4B] hover:border-x-[#EB6E4B] ">
				<img class=" transform h-96 content-center container" src="@article.ImageLink" />
			<div class="">
				<div class="relative bottom-0 top-auto bg-slate-200 max-h-96 max-w-xl mx-auto my-auto border-4 border-emerald-800 border-opacity-15 shadow-xl">
					<div class="article-preview p-4 border-b border-gray-300">
						<h2 class="text-xl font-bold">@article.Headline</h2>
						<p class="text-gray-700">@article.Preview</p>
						<a href="/Article/@article.Id" class="text-blue-500 hover:underline">READ MORE</a>
					</div>
				</div>
			</div>
		</div>
	}
}

