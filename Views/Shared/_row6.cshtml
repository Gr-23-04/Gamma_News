@model List<Gamma_News.Models.ViewModels.Article>
@{



}

@if (Model != null)
{
    @foreach (var article in Model)
    {
        <a href="/Article/@article.Id">
            <div style="background-color:#162C3E;display:flex;flex-direction:column;height:80vh;padding-top:64px;padding-right:88px;padding-left:88px;margin-bottom:150px;" class="w-full">
                <div style="display:flex;flex-direction:row;margin-bottom:35px;">
                    <!-- Article Text Section -->
                    <div style="width:50%;display:flex;flex-direction:column;padding:20px;">
                        <!-- Headline and Button -->
                        <div style="display:flex;flex-direction:row;padding:0 55px;justify-content:space-between;align-items:center;margin-bottom:24px;">
                            <h2 class="rounded px-4 py-2 text-xl font-bold text-white">@article.Headline</h2>
                            <button style="border:3px solid #ffffff;" class="rounded px-4 py-2 font-bold text-white hover:bg-blue-700">
                                READ MORE
                            </button>
                        </div>
                        <!-- Preview Text -->
                        <div class="mt-4 text-xs font-bold text-white">
                            <p>@article.Preview</p>
                        </div>
                    </div>
                    <!-- Image Section -->
                    <div style="width:50%;background-color:#ffffff;">
                        <img class="h-96 w-full object-cover" src="@article.ImageLink" />
                    </div>
                </div>
            </div>
        </a>
    }
}

