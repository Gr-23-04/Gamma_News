@{
    ViewData["Title"] = "Subscribe";
}
   
<div class="col-3" style="padding-top:200px"></div>

<div class="container1" style="text-align:center;">
    <h3>@ViewBag.Message <br /></h3>
    @if (@ViewBag.Message == null)
    {
        <div class="container">

            <div style="text-align:center; color:greenyellow ;font-size: 30px;text-decoration: underline">

                <h2>Confirm the Order and Pay</h2>

            </div>
            <br />
            <form asp-action="Subscribe" autocomplete="on">
                <div class="row">

                    <div class="col-md-12">


                        <div class="card p-3">

                            <h6 class="text-uppercase">Payment details</h6>


                            <div class="inputbox mt-3"> <input type="text" pattern=".{3,50}" maxlength="50" name="name" class="form-control" required="required" autofocus> <span>Name on card</span> </div>

                            <div class="row">

                                <div class="col-md-6">

                                    <div class="inputbox mt-3 mr-2">
                                        <input type="text" inputmode="numeric" pattern=".{12,16}" maxlength="16" name="name" class="form-control" required="required"> <i class="fa fa-credit-card"></i> <span>Card Number</span>


                                    </div>


                                </div>

                                <div class="col-md-6">

                                    <div class="d-flex flex-row">


                                        <div class="inputbox mt-3 mr-2"> <input type="text" inputmode="numeric" pattern=".{5,5}" maxlength="5" name="name" class="form-control" required="required"> <span>Expiry</span> </div>

                                        <div class="inputbox mt-3 mr-2"> <input type="text" inputmode="numeric" pattern=".{3,3}" maxlength="3" name="name" class="form-control" required="required"> <span>CVV</span> </div>


                                    </div>


                                </div>


                            </div>

                            <div class="mt-4 mb-4">

                                <h6 class="text-uppercase">Billing Address</h6>


                                <div class="row mt-3">

                                    <div class="col-md-6">

                                        <div class="inputbox mt-3 mr-2"> <input type="text" pattern=".{2,50}" maxlength="50" name="name" class="form-control" required="required"> <span>Street Address</span> </div>


                                    </div>


                                    <div class="col-md-6">

                                        <div class="inputbox mt-3 mr-2"> <input type="text" pattern=".{2,20}" maxlength="20" name="name" class="form-control" required="required"> <span>City</span> </div>


                                    </div>




                                </div>


                                <div class="row mt-2">

                                    <div class="col-md-6">

                                        <div class="inputbox mt-3 mr-2"> <input type="text" pattern=".{3,20}" maxlength="20" name="name" class="form-control" required="required"> <span>State/Province</span> </div>


                                    </div>


                                    <div class="col-md-6">

                                        <div class="inputbox mt-3 mr-2"> <input type="text" inputmode="numeric" pattern=".{4,12}" maxlength="12" name="name" class="form-control" required="required"> <span>Zip code</span> </div>


                                    </div>

                                    <div>
                                        <div style="width:100%;">
                                            <h6 class="text-uppercase">Subscription Payment</h6>
                                            <input type="radio" name="plan" id="planMonthly" value="1" required="required" /><label for="planMonthly">Monthly $5</label>
                                            <br />
                                            <input type="radio" name="plan" id="planYearly" value="2" /><label for="planYearly">Yearly $50</label>
                                        </div>
                                    </div>


                                </div>

                            </div>

                        </div>


                        <div class="form-group text-indigo-300 border-1 shadow-2xl">

                            <button type="submit" class="btn btn-success px-3" style="text-align:center">Confirm Payment</button>


                        </div>

                    </div>


                </div>
            </form>


        </div>
    }
</div>

