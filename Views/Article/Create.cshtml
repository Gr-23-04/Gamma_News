            <div class="form-group text-slate-900">
                <label asp-for="FileName" class="control-label text-indigo-300"></label>
                <input asp-for="FileName" class="form-control w-full rounded-md border-sky-900 shadow-inner shadow-gray-700 text-black" />
                <span asp-validation-for="FileName" class="text-danger"></span>
            </div>
            <div class="form-group text-slate-900">
                <label asp-for="Image" class="control-label text-indigo-300"></label>
                <input asp-for="Image" type="file" class="form-control " />
              

             </div >

