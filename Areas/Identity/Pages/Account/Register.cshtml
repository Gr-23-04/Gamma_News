@page
@model RegisterModel
@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>

<div class="relative bg-gradient-to-r from-gray-800 from-0% via-sky-950 via-50% to-gray-800 to-100% px-6 py-12 shadow-2xl" style="">
    <a class="relative justify-center" style="" asp-controller="Home" asp-action="Index">
        <img class="mx-auto w-14" src="~/Image/Vector1.png" alt="" />
    </a>
    <div class="min-h-full justify-center px-6 py-12 lg:px-8">
        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form id="registerForm" class="block space-y-6 text-sm font-medium leading-6 text-slate-300" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center text-lg">Create a new account</h2>
                <hr class="" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 pb-16">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control w-full rounded-md border-sky-900 shadow-inner shadow-gray-700 text-black" style="" autocomplete="username" aria-required="true" placeholder=" Email@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>
                <div class="static form-floating mb-3 block text-sm font-medium leading-6">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control w-full rounded-md border-sky-900 shadow-inner shadow-gray-700 text-black" autocomplete="new-password" aria-required="true" placeholder=" Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control w-full rounded-md border-sky-900 shadow-inner shadow-gray-700 text-black" autocomplete="new-password" aria-required="true" placeholder=" Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger "></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mx-auto flex min-w-32 justify-center rounded-lg border-y-2 border-sky-900 border-opacity-55 text-lg text-slate-300 shadow-md shadow-gray-900">Register</button>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h3 class="text-slate-300">Use another service to register.</h3>
                <hr />
                @{
                    if ( ( Model.ExternalLogins?.Count ?? 0 ) == 0 )
                    {

                        <div>
                            <p class="text-slate-300">There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up this ASP.NET application to support logging in via external services</a>.</p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p class="text-slate-300">
                                    @foreach ( var provider in Model.ExternalLogins! )
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
